<h2>マイページ 情報編集</h2>


<%= form_with model: @member, url: registration_path(resource_name) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :プロフィール画像 %>
    <% if @member.profile_image.attached? %>
      <%= f.file_field :profile_image, accept: "image/*" %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :名前 %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :自己紹介 %>
    <%= f.text_area :introduction %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="actions">
    <%= f.submit "変更" %>
  </div>
<% end %>

<%= link_to "退会する", members_unsubscribe_path %>
