<body id="new">
<div class="box2">
  <div class="box-inner">
    <%= form_with model: @member, url: session_path(resource_name) do |f| %>
    <h1 class="login">ログイン</h1>
    <div class="box-email">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
    <div class="box-password">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
    <div class="d-grid gap-2">
      <%= f.submit "ログイン", class: "btn btn-success" %>
    </div>
    <% end %>
    <div class="d-grid">
      <p><span>--------------</span>会員登録がまだの方はこちら<span>-------------</span></p>
      <%= link_to "新規登録", new_member_registration_path, class: 'btn btn-primary' %>
    </div>
    <div class="d-grid">
      <p><span>--------------------</span>お試しの方はこちら<span>-----------------</span></p>
      <%= link_to 'ゲストログイン（閲覧用）', members_guest_sign_in_path, method: :post, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
</body>

