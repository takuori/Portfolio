<h3 class="nonrelease">下書き一覧</h3>
<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-3">
    <% if @posts.exists? %>
      <% @posts.each do |post| %>
        <div class="col">
          <div class="card-nonrelease">
            <%= link_to post_path(post.id) do %>
              <%= image_tag post.get_post_image, width: '100%', height: '100%' %>
            <% end %>
            <div class="card-location-nonrelease">
              <strong>撮影地</strong>：<%= post.location %>
            </div>
            <div class="card-detail">
              <strong>投稿者コメント</strong>：<%= post.detail %>
            </div>
            <div class="card-tag">
              <i class="fas fa-tag"></i>
              <%= link_to tag_posts_path(tag_id: tag.id) do %>
                <%= post.tags.map(&:name).join(',') %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="nothing">下書きはありません</div>
    <% end %>
  </div>
</div>