<h3 class="like">いいね一覧</h3>
<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-3">
    <% if @like_posts.present? %>
      <% @like_posts.each do |post| %>
      <div class="col">
        <div class="card-like">
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_post_image, width: '100%', height: '100%' %>
          <% end %>
          <div class="card-location-like">
            <strong>撮影地</strong>：<%= post.location %>
          </div>
          <div class="card-detail">
            <strong>投稿者のコメント</strong>：<%= post.detail %>
          </div>
          <div class="card-tag">
            <i class="fas fa-tag"></i>
            <%= post.tags.map(&:name).join(',') %>
          </div>
          <div class="like-comment">
            <i class="fas fa-comment-dots"></i>
            <%= link_to post_path(post.id) do %>
              <%= "#{post.comments.count}" %>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    <% else %>
      <div class="nolike">いいねした投稿はありません</div>
    <% end %>
  </div>
  <div class="top-back">
    <%= link_to "トップ画面に戻る", posts_path, class: "btn btn-secondary" %>
  </div>
</div>