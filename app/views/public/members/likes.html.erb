<h3 class="like">いいね一覧</h3>
<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-3">
    <% @like_posts.each do |post| %>
    <div class="col">
      <div class="card-like">
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.get_post_image, width: '100%', height: '100%' %>
        <% end %>
        <div class="card-location-like">
          <strong>撮影地</strong>：<%= post.location %>
        </div>
        <div class="card-detail">
          <strong>本文</strong>：<%= post.detail %>
        </div>
        <div class="card-tag">
          <%= link_to tag_posts_path(tag_id: tag.id) do %>
            <%= post.tags.map(&:name).join(',') %>
          <% end %>
        </div>
        <div class="like-comment">
          <%= "#{post.comments.count} コメント" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>