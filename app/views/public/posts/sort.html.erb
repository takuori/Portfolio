<h3>検索結果（並び順変更）</h3>
<%= form_with url: members_sort_path, method: :get, local: true do |f| %>
  <%= f.select :keyword, [['投稿が新しい順', 'new'],['投稿が古い順', 'old'],['いいねが多い順', 'likes'],['いいねが少ない順','dislikes'],] %>
  <%= f.submit %>
<% end %>

<% @posts.each do |post| %>
  <%= link_to post_path(post.id) do %>
    <%= image_tag post.get_post_image, width: '50%', height: '50%' %>
  <% end %>
  <%= post.location %>
  <%= post.detail %>
  <%= post.tags.map(&:name).join(',') %>
  <div id="like_btn_<%= post.id %>">
    <%= render 'public/likes/like', post: post %>
  </div>
  <%= "#{post.comments.count} コメント" %>
<% end %>