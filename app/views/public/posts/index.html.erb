<h2>投稿一覧</h2>
<%= flash[:notice] %>
<%= flash[:alert] %>
<div class="container">
  <div class="row">
    <% @tag_list.each do |list| %>
      <%= link_to list.name, tag_posts_path(tag_id: list.id) %>
      <%= "(#{list.posts.count})" %>
    <% end %>
    <div class="post">
      <% @posts.each do |post| %>
        <%= image_tag post.get_post_image, width: '50%', height: '50%' %>
        <%= post.location %>
        <%= post.detail %>
        <%= post.tags.map(&:name).join(',') %>
      <% end %>
    </div>
  </div>
</div>
