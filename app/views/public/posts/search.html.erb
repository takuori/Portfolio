<h2>タグ別投稿一覧</h2>
<div class="container">
  <div class="row">
    <div class="post">
      <% @posts.each do |post| %>
        <%= image_tag post.get_post_image, width: '50%', height: '70%' %>
        <%= post.location %>
        <%= post.detail %>
        <%= post.tags.map(&:name).join(',') %>
      <% end %>
    </div>
  </div>
</div>
