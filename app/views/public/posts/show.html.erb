<h3>投稿詳細</h3>
<%= image_tag @post.get_post_image, width: "50%", height: "50%" %>
<%= @post.location %>
<%= @post.detail %>
<%= @post.created_at.strftime('%Y/%m/%d') %>

<% @tag_posts.each do |tag| %>
  <%= link_to tag.name, tag_posts_path(tag_id: tag.id) %>
  <%= "(#{tag.posts.count})" %>
<% end %>
<div id="comment-area">
  <%= render "public/comments/comment", post: @post, comment: @comment %>
</div>
<p>コメント件数:<%= @comments.count %></p>
<div class="comments">
  <%= render "public/comments/index", post: @post %>
</div>
<%= paginate @comments %>
<%= link_to "編集する", edit_post_path(@post.id) %>