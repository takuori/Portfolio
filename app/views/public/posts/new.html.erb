<body id="postnew">
  <div class="error">
    <%= flash[:notice] %>
    <%= flash[:alert] %>
    <% if @post.errors.any? %>
      <%= @post.errors.count %>件のエラー
      <ul>
        <%= @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="box3">
    <div class="box-inner">
      <%= form_with model: @post do |f| %>
      <h3 class="newpost">新規投稿</h3>
      <div class="box-image">
        <%= f.label :撮影写真 %>
        <%= f.file_field :post_image, accept: "image/*", class: "form-control" %>
      </div>
      <div class="box-location">
        <%= f.label :撮影地 %><br>
        <%= f.text_field :location, class: "form-control"  %>
      </div>
      <div class="box-detail">
        <%= f.label :本文 %><br>
        <%= f.text_area :detail, class: "form-control"  %>
      </div>
      <div class="box-tag">
        <%= f.label :タグ %><br>
        <%= f.text_field :name, placeholder:",で区切ってください", class: "form-control"  %>
      </div>
      <div class="box-status">
        <%= f.label "公開範囲を選択" %><br>
        <%= f.select :status, [["公開", "released"],["下書き","nonreleased"]],required: true, class: "form-control" %>
      </div>
      <div class="d-grid">
        <%= f.submit "投稿", class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</body>