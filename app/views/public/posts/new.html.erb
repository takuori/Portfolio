<h3>新規投稿</h3>
<%= flash[:notice] %>
<%= flash[:alert] %>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラー
  <ul>
    <%= @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-6">
      <%= form_with model: @post do |f| %>
        <div class="form-field">
          <%= f.file_field :post_image, accept: "image/*" %>
        </div>
        <div class="form-field">
          <%= f.label :撮影地 %>
          <%= f.text_field :location %>
        </div>
        <div class="form-field">
          <%= f.label :本文 %>
          <%= f.text_area :detail %>
        </div>
        <%= f.label :タグ %>
        <%= f.text_field :name, placeholder:",で区切ってください" %>
        <div class="action">
          <%= f.label "公開範囲を選択" %>
          <%= f.select :status, [["公開", "released"],["下書き","nonreleased"]],required: true, class: "form-control" %>
          <%= f.submit "投稿" %>
        </div>
      <% end %>
    </div>
  </div>
</div>