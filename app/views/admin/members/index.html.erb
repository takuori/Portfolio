<div class="container">
  <div class="row">
    <h3>会員一覧</h3>
    <div class="col-6">
      <table class="table">
        <% @members.each do |member| %>
        <tr>
          <td>
            <% if member.profile_image.attached? %>
            　<%= image_tag member.get_profile_image, class: "rounded-circle", size:"30x30" %>
            <% end %>
          </td>
          <td>
            <%= link_to admin_member_path(member) do %>
              <%= member.name %>
            <% end %>
          </td>
          <td><%= member.introduction %></td>
          <td><%= member.email %></td>
          <td>
            <% if member.is_deleted == true %>
              <p class="text-danger font-weight-bold">退会</p>
            <% else %>
              <p class="text-success font-weight-bold">有効</p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

