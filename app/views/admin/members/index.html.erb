<div class="container">
  <div class="row">
    <h3>会員一覧</h3>
    <div class="col-12">
      <table class="table">
        <thead>
          <tr>
            <th>プロフィール画像</th>
            <th>名前</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @members.each do |member| %>
          <tr>
            <td>
              <%= image_tag member.get_profile_image, class: "rounded-circle", size:"50x50" %>
            </td>
            <td>
              <%= link_to admin_member_path(member) do %>
                <%= member.name %>
              <% end %>
            </td>
            <td><%= member.email %></td>
            <td>
              <% if member.is_deleted == true %>
                <p class="text-danger font-weight-bold">退会</p>
              <% else %>
                <p class="text-success font-weight-bold">有効</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @members %>
    </div>
  </div>
</div>

